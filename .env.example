# =============================================================================
# WHMAZ - CI-CRM Environment Configuration
# =============================================================================
#
# This file contains all environment-specific configuration variables.
#
# IMPORTANT:
# 1. Copy this file to .env in the root directory
# 2. Update all values with your actual credentials
# 3. Never commit .env to version control (it's in .gitignore)
# 4. Keep .env.example updated when adding new variables
#
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION ENVIRONMENT
# -----------------------------------------------------------------------------

# Environment: development, testing, or production
# IMPORTANT: Set to 'production' for live sites
APP_ENV=production

# Application URL (with trailing slash)
# Example: https://yourdomain.com/
APP_URL=https://yourdomain.com/

# Application Name
APP_NAME="WHMAZ - CI-CRM"

# Debug Mode (true/false)
# IMPORTANT: Set to false in production
APP_DEBUG=false

# Error Reporting Level
# 0 = Off, 1 = Errors only, 2 = Errors + Debug, 3 = All, 4 = All + Info
# Production: 1, Development: 4
LOG_LEVEL=1

# Timezone
# See: https://www.php.net/manual/en/timezones.php
APP_TIMEZONE=UTC

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------

DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=whmaz_db
DB_USERNAME=whmaz_user
DB_PASSWORD=your_secure_database_password

# Database Driver (mysqli or pdo)
DB_DRIVER=mysqli

# Database Prefix (optional)
DB_PREFIX=

# Database Charset
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_general_ci

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------

# Encryption Key (Generate using: php -r "echo bin2hex(random_bytes(32));" )
# IMPORTANT: Change this to a unique random string
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Session Configuration
SESSION_COOKIE_NAME=whmaz_session
SESSION_EXPIRATION=7200
SESSION_SAVE_PATH=application/sessions

# CSRF Protection (true/false)
CSRF_PROTECTION=true
CSRF_TOKEN_NAME=csrf_token_name
CSRF_COOKIE_NAME=csrf_cookie_name
CSRF_EXPIRE=7200

# Cookie Security
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_DOMAIN=
COOKIE_PATH=/

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Login Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300

# -----------------------------------------------------------------------------
# EMAIL / SMTP CONFIGURATION
# -----------------------------------------------------------------------------

# SMTP Host (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST=smtp.gmail.com

# SMTP Port (25, 465, 587, 2525)
# TLS: 587, SSL: 465
SMTP_PORT=587

# SMTP Username (usually your email address)
SMTP_USERNAME=your-email@gmail.com

# SMTP Password or API Key
SMTP_PASSWORD=your_smtp_password_or_api_key

# SMTP Encryption (tls, ssl, or leave empty for none)
SMTP_ENCRYPTION=tls

# From Email (email address that appears as sender)
MAIL_FROM_ADDRESS=noreply@yourdomain.com

# From Name (name that appears as sender)
MAIL_FROM_NAME="WHMAZ Support"

# Reply-To Email (optional)
MAIL_REPLY_TO=support@yourdomain.com

# Test Mode (true/false) - Logs emails instead of sending
MAIL_TEST_MODE=false

# -----------------------------------------------------------------------------
# COMPANY INFORMATION
# -----------------------------------------------------------------------------

COMPANY_NAME="Your Company Name"
COMPANY_EMAIL=info@yourcompany.com
COMPANY_PHONE=+1-555-123-4567
COMPANY_ADDRESS="123 Business Street"
COMPANY_CITY="City Name"
COMPANY_STATE="State/Province"
COMPANY_ZIP="12345"
COMPANY_COUNTRY="United States"
COMPANY_WEBSITE=https://yourcompany.com
COMPANY_TAX_ID=123456789

# -----------------------------------------------------------------------------
# PAYMENT GATEWAY - STRIPE
# -----------------------------------------------------------------------------

# Enable Stripe (true/false)
STRIPE_ENABLED=false

# Stripe Mode (test/live)
STRIPE_MODE=test

# Stripe Test Keys
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxx
STRIPE_TEST_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxx

# Stripe Live Keys
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxx
STRIPE_LIVE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxx

# Stripe Webhook Secret
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# PAYMENT GATEWAY - PAYPAL
# -----------------------------------------------------------------------------

# Enable PayPal (true/false)
PAYPAL_ENABLED=false

# PayPal Mode (sandbox/live)
PAYPAL_MODE=sandbox

# PayPal Sandbox Credentials
PAYPAL_SANDBOX_CLIENT_ID=xxxxxxxxxxxxxxxxxx
PAYPAL_SANDBOX_CLIENT_SECRET=xxxxxxxxxxxxxxxxxx

# PayPal Live Credentials
PAYPAL_LIVE_CLIENT_ID=xxxxxxxxxxxxxxxxxx
PAYPAL_LIVE_CLIENT_SECRET=xxxxxxxxxxxxxxxxxx

# PayPal Business Email
PAYPAL_BUSINESS_EMAIL=your-business@paypal.com

# -----------------------------------------------------------------------------
# DOMAIN REGISTRAR - RESELL.BIZ / RESELLERCLUB
# -----------------------------------------------------------------------------

# Enable Domain Registration (true/false)
DOMAIN_REGISTRATION_ENABLED=true

# Domain Registrar API URL
# Production: https://httpapi.com/api/domains/
# Test: https://test.httpapi.com/api/domains/
DOMAIN_API_URL=https://httpapi.com/api/domains/

# Domain Registrar Credentials
DOMAIN_AUTH_USERID=1234567
DOMAIN_AUTH_APIKEY=your_api_key_here

# Domain API Mode (test/live)
DOMAIN_API_MODE=live

# Default Nameservers
DOMAIN_NS1=ns1.yourhosting.com
DOMAIN_NS2=ns2.yourhosting.com

# WHOIS Privacy (true/false)
DOMAIN_WHOIS_PRIVACY_DEFAULT=true

# -----------------------------------------------------------------------------
# BILLING CONFIGURATION
# -----------------------------------------------------------------------------

# Invoice Settings
INVOICE_PREFIX=INV-
INVOICE_STARTING_NUMBER=1000
INVOICE_DUE_DAYS=7

# Tax Settings
TAX_ENABLED=true
TAX_NAME=VAT
TAX_RATE=10.00
TAX_INCLUSIVE=false

# Late Fee Settings
LATE_FEE_ENABLED=false
LATE_FEE_AMOUNT=5.00
LATE_FEE_PERCENTAGE=0

# Default Currency
DEFAULT_CURRENCY_CODE=USD
DEFAULT_CURRENCY_SYMBOL=$

# Multi-Currency (true/false)
MULTI_CURRENCY_ENABLED=false

# -----------------------------------------------------------------------------
# AUTOMATION / CRON JOBS
# -----------------------------------------------------------------------------

# Enable Cron Jobs (true/false)
CRON_ENABLED=true

# Invoice Generation
# Days before service expiration to generate renewal invoice
INVOICE_GENERATION_DAYS_BEFORE=7

# Payment Reminders
# Days before due date to send first reminder
PAYMENT_REMINDER_FIRST=3
# Days before due date to send second reminder
PAYMENT_REMINDER_SECOND=1
# Days after due date to send overdue reminder
PAYMENT_REMINDER_OVERDUE=3

# Service Suspension
# Days after invoice due date to suspend service
SUSPENSION_DAYS_AFTER_DUE=5

# Service Cancellation
# Days after suspension to cancel service
CANCELLATION_DAYS_AFTER_SUSPENSION=30

# Domain Expiry Reminders
DOMAIN_REMINDER_FIRST=30
DOMAIN_REMINDER_SECOND=15
DOMAIN_REMINDER_THIRD=7

# -----------------------------------------------------------------------------
# FILE UPLOAD SETTINGS
# -----------------------------------------------------------------------------

# Upload Path (relative to root)
UPLOAD_PATH=uploads

# Maximum File Size (in KB)
# 2048 = 2MB, 5120 = 5MB, 10240 = 10MB
MAX_FILE_SIZE=5120

# Allowed File Types (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,txt,zip

# Maximum Files Per Upload
MAX_FILES_PER_UPLOAD=5

# -----------------------------------------------------------------------------
# SESSION & CACHE
# -----------------------------------------------------------------------------

# Session Driver (files, database, redis, memcached)
SESSION_DRIVER=files

# Cache Driver (files, redis, memcached, apc)
CACHE_DRIVER=files

# Cache Time (in seconds)
# 3600 = 1 hour, 86400 = 1 day
CACHE_TIME=3600

# Redis Configuration (if using Redis)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Memcached Configuration (if using Memcached)
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211

# -----------------------------------------------------------------------------
# API SETTINGS
# -----------------------------------------------------------------------------

# API Enabled (true/false)
API_ENABLED=false

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_PERIOD=60

# API Authentication
API_KEY_ENABLED=true
API_OAUTH_ENABLED=false

# -----------------------------------------------------------------------------
# THIRD-PARTY INTEGRATIONS
# -----------------------------------------------------------------------------

# Google reCAPTCHA (for registration/contact forms)
RECAPTCHA_ENABLED=false
RECAPTCHA_SITE_KEY=your_site_key
RECAPTCHA_SECRET_KEY=your_secret_key

# Google Analytics
GOOGLE_ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Live Chat (Tawk.to, LiveChat, etc.)
LIVE_CHAT_ENABLED=false
LIVE_CHAT_WIDGET_ID=your_widget_id

# SMS Gateway (Twilio, etc.)
SMS_ENABLED=false
SMS_PROVIDER=twilio
TWILIO_SID=your_account_sid
TWILIO_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+15551234567

# -----------------------------------------------------------------------------
# BACKUP SETTINGS
# -----------------------------------------------------------------------------

# Automatic Backups (true/false)
BACKUP_ENABLED=false

# Backup Frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Backup Retention (in days)
BACKUP_RETENTION=30

# Backup Storage Path
BACKUP_PATH=backups

# Database Backup
BACKUP_DATABASE=true

# Files Backup
BACKUP_FILES=true

# -----------------------------------------------------------------------------
# DEVELOPER SETTINGS
# -----------------------------------------------------------------------------

# Show Profiler (true/false) - Only for development
PROFILER_ENABLED=false

# Query Debugging (true/false) - Only for development
QUERY_DEBUG=false

# Log Queries (true/false)
LOG_QUERIES=false

# Maintenance Mode (true/false)
MAINTENANCE_MODE=false

# Maintenance Message
MAINTENANCE_MESSAGE="We are currently performing scheduled maintenance. Please check back soon."

# IP Whitelist for Maintenance Mode (comma-separated)
# These IPs can access site during maintenance
MAINTENANCE_WHITELIST=127.0.0.1,::1

# Developer Email (for error notifications)
DEVELOPER_EMAIL=developer@yourcompany.com

# -----------------------------------------------------------------------------
# PERFORMANCE OPTIMIZATION
# -----------------------------------------------------------------------------

# Output Compression (true/false)
COMPRESS_OUTPUT=false

# Minify HTML (true/false)
MINIFY_HTML=false

# CDN Enabled (true/false)
CDN_ENABLED=false

# CDN URL (if enabled)
CDN_URL=https://cdn.yourdomain.com

# Asset Version (for cache busting)
ASSET_VERSION=1.0.0

# -----------------------------------------------------------------------------
# LOCALIZATION
# -----------------------------------------------------------------------------

# Default Language
DEFAULT_LANGUAGE=english

# Available Languages (comma-separated)
AVAILABLE_LANGUAGES=english

# Date Format
# See: https://www.php.net/manual/en/datetime.format.php
DATE_FORMAT=Y-m-d
TIME_FORMAT=H:i:s
DATETIME_FORMAT=Y-m-d H:i:s

# Display Date Format (for users)
DISPLAY_DATE_FORMAT=m/d/Y
DISPLAY_TIME_FORMAT=h:i A
DISPLAY_DATETIME_FORMAT=m/d/Y h:i A

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------

# Enable/Disable Features
FEATURE_CUSTOMER_REGISTRATION=true
FEATURE_DOMAIN_REGISTRATION=true
FEATURE_SUPPORT_TICKETS=true
FEATURE_KNOWLEDGE_BASE=true
FEATURE_ANNOUNCEMENTS=true
FEATURE_AFFILIATE_SYSTEM=false
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_SOCIAL_LOGIN=false

# -----------------------------------------------------------------------------
# NOTIFICATIONS
# -----------------------------------------------------------------------------

# Admin Notification Email
ADMIN_NOTIFICATION_EMAIL=admin@yourcompany.com

# Notify admin on new order
NOTIFY_ADMIN_NEW_ORDER=true

# Notify admin on new ticket
NOTIFY_ADMIN_NEW_TICKET=true

# Notify admin on new customer
NOTIFY_ADMIN_NEW_CUSTOMER=true

# Notify admin on payment received
NOTIFY_ADMIN_PAYMENT=true

# -----------------------------------------------------------------------------
# CUSTOMER PORTAL SETTINGS
# -----------------------------------------------------------------------------

# Allow Customer Registration (true/false)
ALLOW_CUSTOMER_REGISTRATION=true

# Email Verification Required (true/false)
EMAIL_VERIFICATION_REQUIRED=true

# Default Account Status (active/pending)
DEFAULT_ACCOUNT_STATUS=active

# Customer Dashboard Widgets
DASHBOARD_SHOW_SERVICES=true
DASHBOARD_SHOW_INVOICES=true
DASHBOARD_SHOW_TICKETS=true
DASHBOARD_SHOW_ANNOUNCEMENTS=true

# -----------------------------------------------------------------------------
# SUPPORT SYSTEM
# -----------------------------------------------------------------------------

# Default Ticket Department
DEFAULT_TICKET_DEPARTMENT=General Support

# Available Ticket Departments (comma-separated)
TICKET_DEPARTMENTS=Technical Support,Billing Support,Sales,General Inquiry

# Ticket Priority Levels (comma-separated)
TICKET_PRIORITIES=Low,Medium,High,Urgent

# Auto-close resolved tickets after X days
AUTO_CLOSE_TICKETS_AFTER=7

# Notify customer on ticket reply
NOTIFY_CUSTOMER_TICKET_REPLY=true

# Allow file attachments in tickets
TICKET_ATTACHMENTS_ENABLED=true

# Maximum attachment size for tickets (in KB)
TICKET_MAX_ATTACHMENT_SIZE=5120

# -----------------------------------------------------------------------------
# SYSTEM INFORMATION
# -----------------------------------------------------------------------------

# System Version
SYSTEM_VERSION=1.0.0

# System Build Date
SYSTEM_BUILD_DATE=2026-01-25

# License Type
LICENSE_TYPE=Regular

# License Key
LICENSE_KEY=XXXX-XXXX-XXXX-XXXX

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
#
# SECURITY REMINDERS:
# 1. Never share your .env file
# 2. Never commit .env to version control
# 3. Use strong, unique passwords
# 4. Change default encryption key
# 5. Enable SSL/HTTPS in production
# 6. Set APP_ENV=production on live sites
# 7. Set APP_DEBUG=false on live sites
# 8. Regularly update credentials
# 9. Backup .env file securely
# 10. Review and remove unused settings
#
# =============================================================================
